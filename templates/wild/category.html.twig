{% extends 'base.html.twig' %}
{% block title %}{{ categoryName }}{% endblock %}

{% block body %}

    <div>
        <h1>Les 3 dernières séries de la catégorie {{ categoryName }}</h1>
        {% for serie in program %}
            <div style="margin-left: 10px">
                <h2>{{ serie.id }} - {{ serie.title }} </h2>
                <img src="{{ serie.poster }}" alt="" style="width:100px">
                <p> {{ serie.summary }}</p>
            </div>
        {% endfor %}
    </div>


    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}